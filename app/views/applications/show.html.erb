<h1>Application Info </h1>
<p> Status: <%=@application.status%></p>
<p> Applicant Name: <%=@application.name%></p>
<p> Address: <%=@application.street_address%>, <%=@application.city%>, <%=@application.state%>, <%=@application.zip%></p>
<p> Description: <%=@application.description%></p>
<p> Pet Name: 
<% @pets.each do |pet| %>
  <%= link_to pet.name, "/pets/#{pet.id}" %>                      
<%end%>
</p>
<br>
<h2> Add a Pet to this Application </h2>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |form|  %>
  <p><%= form.label :find_pet, "Seach by pet name:" %><br></p>
  <p><%= form.text_field :find_pet %>
  <%= form.submit "Submit" %></p>
  <br>
<% end %>
<% @find_pet.each do |pet| %>
  <div id = "adoption-<%= pet.id %>">
    <%= pet.name %><%= button_to "Adopt this Pet", "/applications/#{@application.id}/pets", params:{pet_id: pet.id} %>
    <br>
  </div>
<% end %>


